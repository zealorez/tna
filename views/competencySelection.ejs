<%-include('partials/header')%> <%-include('partials/navbar')%>
<div class="container">
  <h2 class="mt-2"><%=competency.competency%></h2>
  <form
    action="/evaluationForm/<%=evaluationId%>/<%=category%>/competencies/<%=competencyId%>"
    method="POST"
  >
    <%competency.info.forEach((level,index)=> {%> <% for(let i=0; i <
    requirements.length;i +=1) { %> <%if
    (requirements[i].competency===level.competency &&
    requirements[i].level===level.level) { %>
    <div class="card bg-warning">
      <div class="card-body">
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="levelId"
            id="exampleRadios<%=index%>"
            value="<%=level.id%>"
            checked
          />
          <label class="form-check-label" for="exampleRadios<%=index%>">
            <h5><%=level.level%></h5>
          </label>
          <p class="card-text"><%=level.description%></p>
        </div>
      </div>
    </div>
    <%return%> <%}%> <%}%>
    <div class="card">
      <div class="card-body">
        <div class="form-check">
          <input
            class="form-check-input"
            type="radio"
            name="levelId"
            id="exampleRadios<%=index%>"
            value="<%=level.id%>"
            required
          />
          <label class="form-check-label" for="exampleRadios<%=index%>">
            <h5><%=level.level%></h5>
          </label>
          <p class="card-text"><%=level.description%></p>
        </div>
      </div>
    </div>
    <%})%>
    <div>
      <label class="mt-5" for="actionPlan"><h3>Action Plan</h3></label>
    </div>
    <textarea name="actionPlan" id="actionPlan" cols="60" rows="10"></textarea>
    <div>
      <button class="btn btn-primary" type="submit">Add Competency</button>
    </div>
  </form>
</div>
<%-include('partials/footer')%>
