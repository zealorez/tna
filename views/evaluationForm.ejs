<%-include('partials/header')%><%-include('partials/navbar')%>
<div class="container">
  <div class="row mb-2">
    <div class="col-8">
      <label for="jobTitle"><h1>Job Title</h1></label>
      <input
        class="form-control"
        type="text"
        id="jobTitle"
        name="jobTitle"
        value="<%=jobInfo.job_title%>"
        disabled
      />
    </div>
  </div>

  <h2 class="mt-4">Required Competencies</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Competency</th>
        <th scope="col">Level</th>
        <th scope="col">Description</th>
      </tr>
    </thead>
    <tbody>
      <%requirements.forEach((requirement,index)=> {%>
      <tr class="bg-warning">
        <th scope="row"><%=index+1%></th>
        <td><%=requirement.competency%></td>
        <td><%=requirement.level%></td>
        <td><%=requirement.description%></td>
      </tr>
      <%})%>
    </tbody>
  </table>
  <%if (isManager) {%>
  <!-- Manager's Interface -->
  <h2 class="mt-4"><%=name%>'s Competencies</h2>
  <form action="/evaluationForm/<%=evaluationId%>?_method=PUT" method="POST">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Competency</th>
          <th scope="col">Level</th>
          <th scope="col">Action Plan</th>
          <th scope="col">Manager Level</th>
          <th scope="col">Manager Comments</th>
          <%if (status !== 'pending approval' && status !== 'approved') {%>
          <th scope="col">Edit</th>
          <%}%>
        </tr>
      </thead>
      <tbody>
        <%for(let i = 0; i < competencies.length; i++) {%>
        <tr>
          <th scope="col"><%=i+1%></th>
          <th scope="col"><%=competencies[i].competency%></th>
          <th scope="col"><%=competencies[i].level%></th>
          <th scope="col"><%=competencies[i].action_plan%></th>
          <%if (managerInput[i]) {%>
          <th scope="col"><%=managerInput[i].level%></th>
          <%} else {%>
          <th scope="col"></th>
          <%}%> <%if (managerInput[i]) {%>
          <th scope="col"><%=managerInput[i].manager_comment%></th>
          <%} else {%>
          <th scope="col"></th>
          <%}%> <%if (status !== 'approved') {%>
          <th scope="col">
            <a
              href="/evaluationForm/<%=evaluationId%>/general/competencies/<%=competencies[i].general_competencies_id%>/edit"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-pencil-square"
                viewBox="0 0 16 16"
              >
                <path
                  d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                />
                <path
                  fill-rule="evenodd"
                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"
                /></svg
            ></a>
          </th>
          <%}%><%}%>
        </tr>
      </tbody>
    </table>
    <%if (status == 'pending approval') {%>
    <button class="btn btn-primary" disabled>Pending Approval</button>
    <%} else if (status == 'approved') {%>
    <button class="btn btn-primary" disabled type="submit">Approved</button>
    <%} else {%>
    <button class="btn btn-primary" type="submit">Submit</button>
    <%}%>
  </form>
  <%}else {%>

  <!-- User's Interface -->
  <h2 class="mt-4">My Competencies</h2>

  <form action="/evaluationForm/<%=evaluationId%>/competencyCategories">
    <%if (status !== 'pending approval' && status !== 'approved') {%>
    <button type="submit" class="btn btn-secondary">Add Competency</button>
    <%}%>
  </form>
  <form action="/evaluationForm/<%=evaluationId%>?_method=PUT" method="POST">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Competency</th>
          <th scope="col">Level</th>
          <th scope="col">Action Plan</th>
          <%if (status !== 'pending approval' && status !== 'approved') {%>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
          <%}%>
        </tr>
      </thead>
      <tbody>
        <%competencies.forEach((competency, index)=> {%>
        <tr>
          <th scope="col"><%=index+1%></th>
          <th scope="col"><%=competency.competency%></th>
          <th scope="col"><%=competency.level%></th>
          <th scope="col"><%=competency.action_plan%></th>
          <%if (status !== 'pending approval' && status !== 'approved') {%>
          <th scope="col">
            <a
              href="/evaluationForm/<%=evaluationId%>/general/competencies/<%=competency.general_competencies_id%>/edit"
              ><svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-pencil-square"
                viewBox="0 0 16 16"
              >
                <path
                  d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                />
                <path
                  fill-rule="evenodd"
                  d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"
                /></svg
            ></a>
          </th>
          <th scope="col">
            <button
              formaction="/evaluationForm/<%=evaluationId%>/general/competencies/<%=competency.general_competencies_id%>?_method=DELETE"
              class="btn p-0"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-trash"
                viewBox="0 0 16 16"
              >
                <path
                  d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"
                />
                <path
                  fill-rule="evenodd"
                  d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
                />
              </svg>
            </button>
          </th>
          <%}%>
        </tr>
        <%})%>
      </tbody>
    </table>
    <%if (status == 'pending approval') {%>
    <button class="btn btn-primary" disabled>Pending Approval</button>
    <%} else if (status == 'approved') {%>
    <button class="btn btn-primary" disabled type="submit">Approved</button>
    <%} else {%>
    <button class="btn btn-primary" type="submit">Submit</button>
    <%}%>
  </form>
  <%}%>
</div>
<%-include('partials/footer')%>
